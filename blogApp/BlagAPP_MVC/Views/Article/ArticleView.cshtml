@model BlagAPP_MVC.Models.ArticleSearchViewModel
@{
    ViewData["Title"] = "Просмотр статей";
}

<link rel="stylesheet" href="~/css/article-view.css" />

<div class="article-view">

    @if (TempData["CommentSuccess"] is string successMessage)
    {
        <div class="alert alert-success" role="alert">@successMessage</div>
    }

    @if (TempData["CommentError"] is string errorMessage)
    {
        <div class="alert alert-danger" role="alert">@errorMessage</div>
    }
   

    <form asp-action="ArticleView" asp-controller="Article" method="post" class="search-container">
        @Html.AntiForgeryToken()
        <input asp-for="Title" placeholder="Введите название" />
        <input asp-for="Tag" placeholder="Введите тег" />
        <button type="submit">Найти по свойствам</button>
    </form>

    @if (Model.SearchCompleted && Model.Articles.Count == 0)
    {
        <div class="no-articles">Статьи не найдены. Попробуйте изменить критерии поиска.</div>
    }

    @if (Model.Articles.Count > 0)
    {
        <div class="articles-count">Найдено статей: @Model.Articles.Count</div>

        @for (var index = 0; index < Model.Articles.Count; index++)
        {
            var article = Model.Articles[index];
            <div class="article-item">
                <div class="article-header">
                    <h2 class="article-title">@(string.IsNullOrWhiteSpace(article.Title) ? "Без названия" : article.Title)</h2>
                    <div class="article-meta">
                        @if (article.PublishedAt.HasValue)
                        {
                            <span class="date">@article.PublishedAt.Value.ToString("dd MMMM yyyy HH:mm")</span>
                        }

                        @if (article.Tags?.Count > 0)
                        {
                            <div class="tags">
                                @foreach (var tag in article.Tags)
                                {
                                    <span class="tag">#@tag</span>
                                }
                            </div>
                        }

                        @if (article.ReadTime.HasValue)
                        {
                            <span class="read-time">Время чтения: @article.ReadTime мин.</span>
                        }
                    </div>
                </div>

                @if (User.IsInRole("Admin"))
                {
                    <form asp-action="DeleteArticle" asp-controller="Article" asp-route-articleId="@article.Id" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Удалить эту статью?');">Удалить статью</button>
                    </form>
                }

                @if (!string.IsNullOrWhiteSpace(article.Description))
                {
                    <div class="article-description">@article.Description</div>
                }

                <div class="article-content">
                    <p>@(string.IsNullOrWhiteSpace(article.Text) ? "Содержание статьи отсутствует" : article.Text)</p>
                </div>

                @if (!string.IsNullOrWhiteSpace(article.Author_Email))
                {
                    <div class="article-footer">
                        <span class="email">Email автора: @article.Author_Email</span>
                    </div>
                }

                @if (article.comments?.Count > 0)
                {
                    <details class="divComments">
                        <summary class="countComments">Количество комментариев: @article.comments.Count</summary>
                        @for (var commentIndex = 0; commentIndex < article.comments.Count; commentIndex++)
                        {
                            var comment = article.comments[commentIndex];
                            <div class="Comments">
                                <p>Комментарий : @(commentIndex + 1)</p>
                                <h5 class="nameAuthorConnent">@comment.UserName</h5>
                                <p class="contentComments">@comment.Content</p>
                                <p class="timeComments">Опубликован в @comment.CreatedAt</p>

                                @if (User.IsInRole("Admin"))
                                {
                                    <form asp-action="Delete" asp-controller="Comments" asp-route-commentId="@comment.Id" method="post" class="mt-2">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="searchTitle" value="@Model.Title" />
                                        <input type="hidden" name="searchTag" value="@Model.Tag" />
                                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Удалить этот комментарий?');">Удалить комментарий</button>
                                    </form>
                                }


                            </div>
                        }
                    </details>
                }

                @if (User.Identity?.IsAuthenticated == true)
                {
                    <form asp-action="Add" asp-controller="Comments" method="post" class="mt-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="ArticleId" value="@article.Id" />
                        <input type="hidden" name="SearchTitle" value="@Model.Title" />
                        <input type="hidden" name="SearchTag" value="@Model.Tag" />

                        <div class="mb-2">
                            <textarea name="Content" class="form-control" rows="3" maxlength="1000" placeholder="Добавьте комментарий..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-primary btn-sm">Отправить комментарий</button>
                    </form>
                }
                else
                {
                    <div class="mt-3 text-muted">Чтобы оставить комментарий, войдите в аккаунт.</div>
                }
            </div>
        }
    }
</div>
