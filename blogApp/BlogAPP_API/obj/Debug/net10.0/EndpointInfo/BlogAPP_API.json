{
  "openapi": "3.0.4",
  "info": {
    "title": "BlogAPP_API",
    "version": "1.0"
  },
  "paths": {
    "/api/EntranceConroller/Login": {
      "post": {
        "tags": [
          "EntranceConroller"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDate"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDate"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/LoginDate"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/EntranceConroller/Register": {
      "post": {
        "tags": [
          "EntranceConroller"
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/CreateUserDto"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "CreateUserDto": {
        "required": [
          "email",
          "firstName",
          "password",
          "role"
        ],
        "type": "object",
        "properties": {
          "firstName": {
            "minLength": 2,
            "type": "string"
          },
          "email": {
            "minLength": 1,
            "type": "string",
            "format": "email"
          },
          "password": {
            "minLength": 6,
            "type": "string"
          },
          "avatar_url": {
            "type": "string",
            "nullable": true
          },
          "bio": {
            "type": "string",
            "nullable": true
          },
          "role": {
            "minLength": 1,
            "type": "string"
          }
        },
        "additionalProperties": false
      },
      "LoginDate": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "tags": [
    {
      "name": "EntranceConroller"
    }
  ]
}